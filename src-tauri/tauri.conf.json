{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeDevCommand": "npm run dev -- --port 3002",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://127.0.0.1:3002",
    "frontendDist": "../dist"
  },
  "productName": "Procedural3DMaze",
  "version": "0.1.1",
  "identifier": "com.procedural3dmaze.game",
  "app": {
    "windows": [
      {
        "title": "Procedural 3D Maze",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}
