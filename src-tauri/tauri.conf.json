{
  "build": {
    "beforeDevCommand": "npm run dev -- --host --port 3002",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3002",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Procedural 3D Maze",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "Procedural 3D Maze",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.procedural3dmaze.app",
      "icon": []
    }
  }
}

